<section>
  <div class="hero">
    <picture>
       <source
        media="(max-width: 600px)"
        srcset="./assets/img/home/hero_mobile.jpg"
      />
      <source
        media="(max-width: 975px)"
        srcset="./assets/img/home/hero_tablet.jpg"
      />
      <img src="./assets/img/home/hero_desktop.jpg" alt="Reds smoothie" />
    </picture>
  </div>
  <div class="info">
    {{>info_card svgPath="./assets/img/energy.svg" title=hero.info_card.energy alt='energy icon' id='energy'}}
    {{>info_card svgPath="./assets/img/focus.svg" title=hero.info_card.focus alt='focus icon' id='focus'}}
    {{>info_card svgPath="./assets/img/sleep.svg" title=hero.info_card.sleep alt='sleep icon' id='sleep'}}
    {{>info_card svgPath="./assets/img/boost.svg" title=hero.info_card.immune alt='boost icon' id='boost'}}
    {{>info_card svgPath="./assets/img/strength.svg" title=hero.info_card.strength alt='strength icon' id='strength'}}
    {{>info_card svgPath="./assets/img/digestion.svg" title=hero.info_card.digestion alt='digestion icon' id='digestion'}}
  </div>
</section>